<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when pressed (clicked) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorError"/> <!-- Material3 Red -->
            <stroke
                android:width="1dp"
                android:color="#CCC6D2" />
            <corners
                android:radius="@dimen/_5sdp" />
        </shape>
    </item>

    <!-- State when focused or hovered -->
    <item android:state_focused="true" android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorError"/> <!-- Material3 Red -->
            <stroke
                android:width="1dp"
                android:color="#CCC6D2" />
            <corners
                android:radius="@dimen/_5sdp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#CCC6D2" />
            <corners
                android:radius="@dimen/_5sdp" />
        </shape>
    </item>

</selector>